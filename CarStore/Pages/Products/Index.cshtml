@page
@model CarStore.Pages.Products.IndexModel

<h3 class="text-center">Welcome to Car section</h3>

<div class="row justify-content-center mt-5 gap-3">
    @foreach(var car in @Model.Products)
    {
        var PhotoPath = "~/Photo/" + (@car.PhotoPath ?? "noimage.jpg");
        <div class="col-lg-5 d-flex flex-column gap-1 align-items-center border border-1 rounded-1">
            <h5 class="text-center my-1 header">@car.Name</h5>
            <img class="rounded-1 photo-style" src="@PhotoPath" asp-append-version="true"/>
            <div class="rounded-1 mb-2">
                <a class="btn btn-sm btn-success"
                        asp-page="Details" asp-route-id="@car.Id">View</a>
                <a asp-page="edit" asp-route-id="@car.Id" class="btn btn-sm btn-info">Edit</a>
                <a asp-page="delete" asp-route-id="@car.Id" class="btn btn-sm btn-danger">Delete</a>
            </div>
        </div>
    }
    
</div>
