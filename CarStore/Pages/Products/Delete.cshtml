@model CarStore.Pages.Products.DeleteModel

<h3 class="alert alert-danger text-center">Do you want to delete?</h3>

<form method="post" asp-page="delete" class="text-center">
    <button type="submit" asp-route-id="@Model.product.Id" class="btn btn-danger">Yes</button>
    <a class="btn btn-success" asp-page="index">No</a>
</form>
